    <div class="body-container">
      <img class="bgImg" src="css/img/background.png" alt="" />
      <div class="card">
        <h3 class="card-title">Power up your game</h3>
        <h1 class="card-desc">
          Cyber kid <br />
          infinite
        </h1>
        <p class="card-paragraph">Now Available on Pc & Console</p>

        <button class="card-btn">Buy Now</button>
      </div>
      <div class="imgCard">
        <img class="card-img" src="css/img/imgCard.png" alt="" />
      </div>
    </div>

    <div class="gaming-section">
      <div class="header">
        <h1 class="gaming-title">Best Sellers</h1>
        <button class="gaming-btn">View All</button>
      </div>
      <i class="fa-solid fa-chevron-left"></i>

      <ul class="carousel">
        <li class="carousel-card">
          <div class="img"><img src="css/img/card-first.png" alt="img" /></div>
          <h2 class="carousel-title">Wave Gen Rx</h2>
          <p class="price">$579.99</p>
          <button class="carousel-btn">Add to Cart</button>
        </li>
        <li class="carousel-card">
          <div class="img"><img src="css/img/mouse.png" alt="img" /></div>
          <h2 class="carousel-title">Wave Gen Rx</h2>
          <p class="price">$579.99</p>
          <button class="carousel-btn">Add to Cart</button>
        </li>
        <li class="carousel-card">
          <div class="img"><img src="css/img/game.png" alt="img" /></div>
          <h2 class="carousel-title">Wave Gen Rx</h2>
          <p class="price">$579.99</p>
          <button class="carousel-btn">Add to Cart</button>
        </li>
        <li class="carousel-card">
          <div class="img"><img src="css/img/game2.png" alt="img" /></div>
          <h2 class="carousel-title">Wave Gen Rx</h2>
          <p class="price">$579.99</p>
          <button class="carousel-btn">Add to Cart</button>
        </li>
      </ul>
      <i class="fa-solid fa-chevron-right"></i>
    </div>

    <div class="category-section">
      <h1 class="category-title">Shop by Category</h1>
      <div class="categories">
        <div class="consoles">
          <img src="css/img/console.png" alt="Card Image" />
          <h3>Consoles</h3>
        </div>
        <div class="consoles">
          <img src="css/img/accessories.png" alt="Card Image" />
          <h3>Accessories</h3>
        </div>
        <div class="consoles">
          <img src="css/img/controller.png" alt="Card Image" />
          <h3>Controllers</h3>
        </div>
      </div>
    </div>

    <div class="sales-section">
      <div class="sales-images">
        <div class="card">
          <h3 class="card-title">This week's deals/h3>
          <h1 class="card-desc">
            10% <br />
            of all games
